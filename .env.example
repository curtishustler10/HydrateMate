# Database (Railway will auto-inject DATABASE_URL)
DATABASE_URL=postgresql://username:password@localhost:5432/hydratemate

# Server Configuration
PORT=5000
NODE_ENV=production
CLIENT_URL=https://hydratemate.vercel.app

# Security
JWT_SECRET=your_super_secure_256_bit_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://hydratemate.vercel.app,https://hydrate-mate.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Push Notifications (Optional - can add later)
FCM_SERVER_KEY=your_firebase_cloud_messaging_server_key
VAPID_PUBLIC_KEY=your_web_push_vapid_public_key
VAPID_PRIVATE_KEY=your_web_push_vapid_private_key

# Monitoring (Optional)
SENTRY_DSN=your_sentry_error_tracking_dsn
LOG_LEVEL=info

# Features Flags
ENABLE_CHALLENGES=true
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# API Configuration
API_VERSION=v1
MAX_REQUEST_SIZE=10mb